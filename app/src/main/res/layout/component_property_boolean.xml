<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"

    >

    <TextView
        android:id="@+id/title"
        style="@style/PropertyHeaderStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/property_bottom_padding"
        android:layout_marginTop="@dimen/property_top_padding"
        android:text="Text" />

    <Switch
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:minHeight="50dp"
        android:paddingLeft="50dp"
        android:switchMinWidth="50dp" />

    <ImageButton
        android:id="@+id/ui_button_proxy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/value"
        android:layout_alignParentTop="true"
        android:background="@drawable/transparent_button_background" />

</RelativeLayout>