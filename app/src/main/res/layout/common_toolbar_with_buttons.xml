<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ui_appbar_button_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginRight="-8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:minWidth="@dimen/action_bar_height"
                android:tint="#FFF"
                app:srcCompat="@drawable/cancel" />

            <TextView
                android:id="@+id/ui_appbar_title"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_toLeftOf="@+id/ui_right_buttons_container"
                android:layout_toRightOf="@+id/ui_appbar_button_left"
                android:text="Title"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/ui_right_buttons_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ui_appbar_button_right_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless"
                    android:minWidth="@dimen/action_bar_height"
                    android:tint="#FFF"
                    android:visibility="gone"
                    app:srcCompat="@drawable/more" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ui_appbar_button_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless"
                    android:minWidth="@dimen/action_bar_height"
                    android:tint="#FFF"
                    app:srcCompat="@drawable/done" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ui_appbar_text_button_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?selectableItemBackgroundBorderless"
                    android:minWidth="@dimen/action_bar_height"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Save"
                    android:textColor="#fff"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>
</merge>